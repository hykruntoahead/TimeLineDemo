<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ngl="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/item_ll_info"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/item_iv_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="45dp"
        android:src="@mipmap/default_icon"
        android:layout_marginTop="6dp"
        />
        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="我的母亲啊啊啊啊"
            android:textColor="#363636"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_ll_line"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <View
            android:id="@+id/item_line_top"
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:background="#c0c0c0"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/familycircle_icon_time"
            android:layout_marginBottom="16dp"/>


        <View
            android:id="@+id/item_line_bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#c0c0c0"
            android:layout_gravity="center_horizontal"
           />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_ll_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="20dp"
            android:text="今天 14：33"
            android:textColor="#363636"
            android:textSize="28sp" />

        <com.jaeger.ninegridimageview.NineGridImageView
            android:id="@+id/item_nine_ngiv"
            android:layout_width="872dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            ngl:imgGap="11dp"
            ngl:singleImgSize="400dp"
            ngl:showStyle="grid">

        </com.jaeger.ninegridimageview.NineGridImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">
            <TextView
                android:id="@+id/item_tv_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_center"
                android:layout_margin="10dp"
                android:textSize="24sp"
                android:textColor="#7283a6"
                android:layout_toLeftOf="@+id/item_v_like"/>
            <View
                android:id="@+id/item_v_like"
                android:layout_width="88dp"
                android:layout_height="77dp"
                android:background="@mipmap/familycircle_btn_thumbup"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>